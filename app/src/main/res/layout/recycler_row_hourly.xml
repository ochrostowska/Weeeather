<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="102dp"
    android:background="@color/coffeePink4"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:gravity="center">

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
        android:id="@+id/current_hour_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="13:00"
        android:gravity="center"
        android:textColor="@color/coffeeWhite"/>
    <TextView
        android:id="@+id/current_temperature_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wi_storm"
        android:layout_margin="5dp"
        android:textColor="@color/coffeeWhite"
        android:textSize="24dp"/>
    <TextView
        android:id="@+id/current_temperature_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="temp"
        android:gravity="center"
        android:textColor="@color/coffeeWhite"/>
</LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="88dp"
        android:layout_gravity="center"
        android:background="@color/white30"/>
</LinearLayout>